{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "znodebasetest"
		},
		"AzureBlobStorageForADF_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureBlobStorageForADF'"
		},
		"AzureSqlDatabaseForADF_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureSqlDatabaseForADF'"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/CopyPipeline_ADFZnodeNonProd')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "Copy Pipeline for ADF Znode NonProd",
				"activities": [
					{
						"name": "Copy_8nq",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [
							{
								"name": "Source",
								"value": "adfexportfiles//"
							},
							{
								"name": "Destination",
								"value": "dbo.ZnodeDomain"
							}
						],
						"typeProperties": {
							"source": {
								"type": "XmlSource",
								"storeSettings": {
									"type": "AzureBlobStorageReadSettings",
									"recursive": true,
									"enablePartitionDiscovery": false
								},
								"formatSettings": {
									"type": "XmlReadSettings",
									"validationMode": "none"
								}
							},
							"sink": {
								"type": "AzureSqlSink"
							},
							"enableStaging": false,
							"enableSkipIncompatibleRow": true,
							"validateDataConsistency": false,
							"logSettings": {
								"enableCopyActivityLog": true,
								"copyActivityLogSettings": {
									"logLevel": "Warning",
									"enableReliableLogging": false
								},
								"logLocationSettings": {
									"linkedServiceName": {
										"referenceName": "AzureBlobStorageForADF",
										"type": "LinkedServiceReference"
									},
									"path": "adfexportfileslogs"
								}
							},
							"translator": {
								"type": "TabularTranslator",
								"mappings": [
									{
										"source": {
											"path": "$['PortalId']"
										},
										"sink": {
											"name": "PortalId",
											"type": "Int32"
										}
									},
									{
										"source": {
											"path": "$['DomainName']"
										},
										"sink": {
											"name": "DomainName",
											"type": "String"
										}
									},
									{
										"source": {
											"path": "$['IsActive']"
										},
										"sink": {
											"name": "IsActive",
											"type": "Boolean"
										}
									},
									{
										"source": {
											"path": "$['ApiKey']"
										},
										"sink": {
											"name": "ApiKey",
											"type": "String"
										}
									},
									{
										"source": {
											"path": "$['ApplicationType']"
										},
										"sink": {
											"name": "ApplicationType",
											"type": "String"
										}
									}
								],
								"mapComplexValuesToString": false
							}
						},
						"inputs": [
							{
								"referenceName": "SourceDataset_8nq",
								"type": "DatasetReference",
								"parameters": {}
							}
						],
						"outputs": [
							{
								"referenceName": "DestinationDataset_8nq",
								"type": "DatasetReference",
								"parameters": {}
							}
						]
					}
				],
				"policy": {
					"elapsedTimeMetric": {},
					"cancelAfter": {}
				},
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/SourceDataset_8nq')]",
				"[concat(variables('factoryId'), '/datasets/DestinationDataset_8nq')]",
				"[concat(variables('factoryId'), '/linkedServices/AzureBlobStorageForADF')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/DestinationDataset_8nq')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "AzureSqlDatabaseForADF",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "AzureSqlTable",
				"schema": [
					{
						"name": "DomainId",
						"type": "int",
						"precision": 10,
						"scale": 0
					},
					{
						"name": "PortalId",
						"type": "int",
						"precision": 10,
						"scale": 0
					},
					{
						"name": "DomainName",
						"type": "nvarchar",
						"precision": 0,
						"scale": 0
					},
					{
						"name": "IsActive",
						"type": "bit",
						"precision": 1,
						"scale": 0
					},
					{
						"name": "ApiKey",
						"type": "nvarchar",
						"precision": 0,
						"scale": 0
					},
					{
						"name": "ApplicationType",
						"type": "varchar",
						"precision": 0,
						"scale": 0
					},
					{
						"name": "CreatedBy",
						"type": "int",
						"precision": 10,
						"scale": 0
					},
					{
						"name": "CreatedDate",
						"type": "datetime",
						"precision": 23,
						"scale": 3
					},
					{
						"name": "ModifiedBy",
						"type": "int",
						"precision": 10,
						"scale": 0
					},
					{
						"name": "ModifiedDate",
						"type": "datetime",
						"precision": 23,
						"scale": 3
					},
					{
						"name": "IsDefault",
						"type": "bit",
						"precision": 1,
						"scale": 0
					}
				],
				"typeProperties": {
					"schema": "dbo",
					"table": "ZnodeDomain"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/AzureSqlDatabaseForADF')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/SourceDataset_8nq')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "AzureBlobStorageForADF",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "Xml",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"fileName": "ZnodeADFDomain.xml",
						"container": "adfexportfiles"
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/AzureBlobStorageForADF')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/AzureBlobStorageForADF')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "AzureBlobStorageFor Znode Non prod ADF ",
				"annotations": [],
				"type": "AzureBlobStorage",
				"typeProperties": {
					"connectionString": "[parameters('AzureBlobStorageForADF_connectionString')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/AzureSqlDatabaseForADF')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureSqlDatabase",
				"typeProperties": {
					"connectionString": "[parameters('AzureSqlDatabaseForADF_connectionString')]",
					"alwaysEncryptedSettings": {
						"alwaysEncryptedAkvAuthType": "ManagedIdentity"
					}
				}
			},
			"dependsOn": []
		}
	]
}